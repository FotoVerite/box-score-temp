<% if superadmin_signed_in? || (current_admin && post.admin_id === current_admin.try(:id)) %>
  <div class="" style="margin-bottom: 15px;">
    <%= link_to 'Edit Post', edit_post_path(post), class: 'button small' %>
    <%= link_to 'Delete Post', post_path(post), method: :delete, confirm: "Are you sure?", class: 'button small alert' %>
  </div>
<% end %>
