<div class="row">
  <%= form_for post do |f| -%>
    <%= field_set_tag 'Post' do %>
      <% if post.errors.any? %>
        <ul class="errors">
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :header_image %>
      <%= f.file_field :header_image, class: 'post-form-image' %>

      <%= f.label :excerpt %>
      <%= f.text_area :excerpt, class: 'post-form-excerpt' %>

      <%= f.label :body %>
      <%= f.cktext_area :body %>

      <% if params[:game_id].present? %>
        <%= f.hidden_field :game_id, value: params[:game_id] %>
      <% end %>

      <%= f.submit class: 'medium button' %>
    <% end %>
  <% end -%>
</div>
