<script>
  mixpanel.init(<%= mixpanel_key %>);
  <% if current_admin %>
    mixpanel.identify(<%= current_admin.email.to_json.html_safe %>);
  <% end %>

  mixpanel.track("Page View");

  (function(){
    var eventsToTrack = <%= events_to_track.to_json.html_safe %>;
    $(eventsToTrack).each(function(i, tracked_event){
      mixpanel.track(tracked_event.name, tracked_event.data);
    });
  })();

  $(function(){
    $('.account-request').click(function() {
      mixpanel.track('Account Request Form Viewed');
    });

    $('.facebook-js').click(function() {
      mixpanel.track('Facebook Button Clicked');
    });

    $('.instagram-js').click(function() {
      mixpanel.track('Instagram Button Clicked');
    });

    $('.twitter-js').click(function() {
      mixpanel.track('Twitter Button Clicked');
    });

    $('.youtube-js').click(function() {
      mixpanel.track('Youtube Button Clicked');
    });

    $('.follow-button').click(function() {
      mixpanel.track('Twitter Button Clicked');
    });
  });
</script>
