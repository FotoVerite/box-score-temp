#game-stats
  %h2 Game Summary

  %table.game-stats
    %thead
      %tr
        %th Team
        - (1..game.stats.periods).each do |period|
          %th= period.to_s
        %th Final

    %tbody
      = render 'games/basketball/game_stats_row', game: game, team: game.team
      = render 'games/basketball/game_stats_row', game: game, team: game.opponent

#player-stats
  = render 'games/basketball/player_stats', game: game, team: game.team
  = render 'games/basketball/player_stats', game: game, team: game.opponent
