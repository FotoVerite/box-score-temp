= field_set_tag 'Player Stats' do
  = render 'games/basketball/player_stats', game: game, team: game.team
  = render 'games/basketball/player_stats', game: game, team: game.opponent

= field_set_tag 'Game Stats' do
  %table.game-stats
    %thead
      %tr
        %th Team
        %th 1
        %th 2
        %th 3
        %th 4
        %th.add-period
          %a{ href: '#', title: 'Add overtime period' }
            %span.icon-plus
        %th Final

    %tbody
      = render 'games/basketball/game_stats', game: game, team: game.team
      = render 'games/basketball/game_stats', game: game, team: game.opponent