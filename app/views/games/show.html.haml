%h1
  %strong #{@game.team.display_name}
  vs.
  %strong #{@game.opponent.display_name}

%h2= @game.date.stamp('March 1, 1999')

#main.twelve.columns
  - if admin_signed_in?
    = link_to 'Edit this box score', edit_game_path(@game), class: 'edit-box-score small button'

  = render "games/box_score", game: @game
