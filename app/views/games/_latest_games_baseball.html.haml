- if games.length > 0
  %h3= sport
  .row
    - games.each do |game|
      .four.columns.summary
        %table.game-stats
          %thead
            %tr
              %th Team
              %th R
              %th H
              %th E

          %tbody
            = render 'games/baseball/game_stats_row', game: game, team: game.away_team, brief: true
            = render 'games/baseball/game_stats_row', game: game, team: game.home_team, brief: true

        = link_to 'Box Score', game_path(game), class: 'box-score'

        .sharing
          %span Share:
          %span= link_to 'Share on Facebook', 'http://facebook.com', class: 'facebook'
          %span= link_to 'Share on Twitter', 'http://twitter.com', class: 'twitter'
          %span= link_to 'Share via Email', '#', class: 'email'
