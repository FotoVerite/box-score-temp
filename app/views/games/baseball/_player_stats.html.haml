%div
  %h2= team.school.name
  %h3 Position Players

  %table.player-stats
    %thead
      %tr
        %th Player
        %th Pos
        %th AB
        %th H
        %th HR
        %th RBI
        %th E

    %tbody
      - game.player_stats_by_key(team, 'position_player').each do |stat|
        %tr
          %th{ scope: 'row' }= stat.player.name
          %td= stat.position_player['pos'].to_i
          %td= stat.position_player['ab'].to_i
          %td= stat.position_player['h'].to_i
          %td= stat.position_player['hr'].to_i
          %td= stat.position_player['rbi'].to_i
          %td= stat.position_player['e'].to_i

  %h3 Pitchers
  %table.player-stats
    %thead
      %tr
        %th Player
        %th IP
        %th H
        %th R
        %th ER
        %th BB
        %th SO

    %tbody
      - game.player_stats_by_key(team, 'pitcher').each do |stat|
        %tr
          %th{ scope: 'row' }= stat.player.name
          %td= stat.pitcher['ip'].to_i
          %td= stat.pitcher['h'].to_i
          %td= stat.pitcher['r'].to_i
          %td= stat.pitcher['er'].to_i
          %td= stat.pitcher['bb'].to_i
          %td= stat.pitcher['so'].to_i
