!!!
%html{lang: 'en'}
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    %title= content_for?(:title) ? yield(:title) : '[BOX]SCORE'
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{ body_attributes }
    .row
      .six.columns.centered
        %p.notice
        %p.alert

    %header.global.twelve.columns
      .row
        #branding.six.columns
          %h5 [BOX]SCORE
        .six.columns
          %nav.global
            - if admin_signed_in?
              %p
                Welcome, #{current_admin.name}
                |
                %span#registration-links
                  = link_to 'Log out', destroy_admin_session_path, method: :delete, id: 'logout'
            - else
              #registration-links
                = link_to 'Log in', new_admin_session_path, id: 'login'

    .row
      #content.twelve.columns
        = yield

        -if admin_signed_in?
          .three.columns.admin-menu
            = render partial: 'shared/admin_menu'

    :javascript
      $(document).ready(function(){
        new BoxScore.Teams();
        new BoxScore.Games($('form.game'));
      });
