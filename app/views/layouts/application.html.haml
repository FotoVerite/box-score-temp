!!!
%html{lang: 'en'}
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    %title= content_for?(:title) ? yield(:title) : 'HSBoxScore'
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{ body_attributes }
    = link_to 'Home', root_path, id: 'branding'
    .row
      .three.columns.centered
        %p.notice
        - if flash.alert
          %p= flash.alert

    %header.global.twelve.columns
      .row
        .eight.columns.offset-by-four

          = link_to 'Follow us on Twitter', 'http://twitter.com', id: 'twitter-button'

          %nav.global
            %p
              %span#registration-links
              - if admin_signed_in?
                Welcome, #{current_admin.name}
                = link_to 'Log out', destroy_admin_session_path, method: :delete, id: 'logout'
              - else
                = link_to 'Log in', new_admin_session_path, id: 'login'
              = link_to 'About us', '/about-us'
              = link_to 'Contact us', '/contact-us'

    .row
      #content.twelve.columns
        .row
          %nav#scores-nav.twelve.columns
            %dl.six.columns
              %dt Boys:
              %dd= link_to 'Basketball', boys_basketball_path, class: 'first'
              %dd= link_to 'Baseball', boys_baseball_path
            %dl.six.columns
              %dt Girls:
              %dd= link_to 'Basketball', girls_basketball_path, class: 'first'
              %dd= link_to 'Softball', girls_softball_path

        -if admin_signed_in?
          = render partial: 'shared/admin_menu'

        .row
          = yield

    .row
      %footer.global.twelve.columns
        %p.eight.columns Confidential and proprietary HS Box Scores NYC LLC. All rights reserved.
        %nav.four.columns
          %ul
            %li= link_to 'Terms of Service', '/terms-of-service'
            %li= link_to 'Privacy Policy', '/privacy-policy'

